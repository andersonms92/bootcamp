<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editNota1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/editNota2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNota1" />

    <EditText
        android:id="@+id/editFaltas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNota2"/>

    <Button
        android:id="@+id/buttonCalcular"
        android:text="@string/Calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editFaltas"/>

    <TextView
        android:id="@+id/textNota1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Nota1"
        android:layout_marginTop="75dp"
        android:layout_marginRight="40dp"
        app:layout_constraintEnd_toStartOf="@id/editNota1"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textNota2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Nota2"
        android:layout_marginTop="170dp"
        android:layout_marginRight="40dp"
        app:layout_constraintEnd_toStartOf="@id/editNota2"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textFaltas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Faltas"
        android:layout_marginTop="265dp"
        android:layout_marginRight="40dp"
        app:layout_constraintEnd_toStartOf="@id/editFaltas"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textMostrarResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25pt"
        app:layout_constraintTop_toBottomOf="@id/buttonCalcular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>